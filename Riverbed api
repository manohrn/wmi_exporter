import requests
import csv
import json
import sys
from datetime import datetime, timedelta
from requests.auth import HTTPBasicAuth

# Fix Windows encoding issues
sys.stdout.reconfigure(encoding='utf-8')

# Aternity API Details
ATERNITY_SERVER = "https://wf-odata.aternity.com"
API_ENDPOINT = "/aternity.odata/latest/APPLICATION_RESOURCES_HOURLY"
USERNAME = "manoharan.muthuraj@wellsfargo.com"
PASSWORD = "your_password_here"

# Get yesterday‚Äôs date in API format
yesterday = (datetime.utcnow() - timedelta(days=1)).strftime("%Y-%m-%dT00:00:00Z")

# API Query Parameters (Updated filter to avoid relative_time issue)
params = {
    "$filter": f"timestamp ge datetime'{yesterday}'"
}

# Set API URL
url = f"{ATERNITY_SERVER}{API_ENDPOINT}"

# Headers
headers = {"Content-Type": "application/json"}

try:
    # Make API request with Basic Authentication
    response = requests.get(url, auth=HTTPBasicAuth(USERNAME, PASSWORD), params=params, headers=headers)

    # Check API response status
    if response.status_code == 200:
        print("‚úÖ API request successful!")

        # Parse JSON response
        data_list = response.json().get("value", [])

        if not data_list:
            print("‚ö† No data found in API response!")
        else:
            # Define CSV filename
            csv_filename = "aternity_api_output.csv"

            # Extract column headers from the first record
            headers = list(data_list[0].keys())

            # Save data to CSV file
            with open(csv_filename, mode="w", newline="", encoding="utf-8") as file:
                writer = csv.writer(file)

                # Write headers
                writer.writerow(headers)

                # Write data rows
                for entry in data_list:
                    writer.writerow([entry.get(col, "N/A") for col in headers])

            print(f"‚úÖ Data successfully saved to {csv_filename}")

    elif response.status_code == 401:
        print("‚ùå Authentication Error: Invalid username or password. Please check credentials.")
    elif response.status_code == 500:
        print("‚ùå Server Error 500: Aternity API failed to process the request. Check the filter format.")
        print(f"üîç Response Details: {response.text}")
    else:
        print(f"‚ùå API Request failed with status code {response.status_code}")
        print("Response:", response.text)

except requests.exceptions.RequestException as e:
    print(f"‚ùå API Request failed due to network or server error: {e}")

except Exception as e:
    print(f"‚ùå Unexpected Error: {e}")
