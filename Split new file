import pandas as pd

# Step 1: Read the CSV file
df = pd.read_csv('input.csv')  # Replace 'input.csv' with the path to your CSV file

# Step 2: Split the 'ServerNames' column and explode it into multiple rows
df = df.assign(ServerNames=df['ServerNames'].str.split(',')).explode('ServerNames')

# Step 3: Optional - Write the output to a new CSV
df.to_csv('output.csv', index=False)

# Display the resulting DataFrame
print(df)
